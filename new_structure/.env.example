# Environment Variables for Hillview School Management System
# Copy this file to .env and update with your actual values

# Admin Credentials (Change these!)
ADMIN_USERNAME=headteacher
ADMIN_PASSWORD=your_secure_admin_password_here
ADMIN_TEACHER_ID=2

# Teacher Credentials (Change these!)
TEACHER_USERNAME=kevin
TEACHER_PASSWORD=your_secure_teacher_password_here
TEACHER_TEACHER_ID=4

# Database Configuration
DATABASE_URL=sqlite:///hillview.db
SECRET_KEY=your_very_secure_secret_key_here

# Security Settings
CSRF_SECRET_KEY=your_csrf_secret_key_here
SESSION_TIMEOUT=3600

# Application Settings
DEBUG=False
ENVIRONMENT=production
LOG_LEVEL=INFO

# Email Configuration (if needed)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password

# Security Headers
SECURITY_HEADERS_ENABLED=True
CONTENT_SECURITY_POLICY_ENABLED=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=300

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Backup Settings
BACKUP_ENABLED=True
BACKUP_INTERVAL=86400  # 24 hours
BACKUP_RETENTION_DAYS=30
